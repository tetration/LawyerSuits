@model LawyerSuits.Domain.SuitItem

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar</h1>

<h3>Tem certeza que você deseja deletar o processo @Html.DisplayNameFor(model => model.SuitName)?</h3><!-- Are you sure you want to delete this? -->
<div>
    <h4>Processo</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SuitName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.SuitName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IsCompleted)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IsCompleted)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Voltar a lista de processos</a>
    </form>
</div>