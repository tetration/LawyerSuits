@model LawyerSuits.Domain.SuitItem

@{
    ViewData["Title"] = "Lawsuit";
}

<h1>Task</h1>

<h4>Processo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SuitName" class="control-label"></label>
                <input asp-for="SuitName" class="form-control" />
                <span asp-validation-for="SuitName" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsCompleted" /> @Html.DisplayNameFor(model => model.IsCompleted)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index">Voltar a Lista de Processos</a><!-- goes back to list of lawsuits-->
            </div>
        </form>
    </div>
</div>