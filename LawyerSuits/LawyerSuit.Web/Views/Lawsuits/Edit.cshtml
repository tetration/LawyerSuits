@model LawyerSuits.Domain.SuitItem

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Processo</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SuitName" class="control-label"></label>
                <input asp-for="SuitName" class="form-control" />
                <span asp-validation-for="SuitName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SuitDescription" class="control-label"></label>
                <textarea asp-for="SuitDescription" class="form-control" id="exampleFormControlTextarea1" rows="3"></textarea>
                <span asp-validation-for="SuitDescription" class="text-danger"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsCompleted" /> @Html.DisplayNameFor(model => model.IsCompleted)
                </label>
            </div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
                <a asp-action="Index">Voltar a lista de processos</a>
            </div>
        </form>
    </div>
</div>